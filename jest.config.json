{
  "moduleFileExtensions": ["ts", "js"],
  "testRegex": "\\.spec.ts$",
  "rootDir": ".",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "tsconfig.jest.json"
    }
  },
  "coverageReporters": ["json", "lcov"],
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/interfaces/*.ts",
    "!src/**/dto/*.ts",
    "!src/**/index.ts",
    "!src/**/enums/*.ts",
    "!src/decorators/feature-action.decorator.ts",
    "!src/constants.ts",
    "!src/crud.module.ts",
    "!src/operators.list.ts",
    "!**/node_modules/**"
  ]
}
